@{
    ViewData["Title"] = "Check Your Inbox";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Background and Card Styling -->
<style>
    body {
        background: url('/images/background.jpg') no-repeat center center fixed; /* Replace with your image path */
        background-size: cover;
    }

    .inbox-card {
        background-color: rgba(255, 255, 255, 0.95); /* Semi-transparent white for readability */
        border-radius: 12px;
        padding: 30px;
        text-align: center;
        max-width: 450px;
    }

    .card-icon {
        font-size: 50px;
        color: #28a745; /* Green color to indicate success */
    }

    .btn-primary, .btn-secondary {
        border-radius: 5px;
        margin-top: 15px;
    }

    .text-muted {
        font-size: 14px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card inbox-card shadow-lg">
        <!-- Success Icon -->
        <div class="card-icon mb-4">
            <i class="fas fa-envelope-open-text"></i> <!-- Font Awesome icon -->
        </div>

        <!-- Header and Message -->
        <h2 class="card-title mb-4">Check Your Inbox</h2>
        <p class="text-dark mb-3">We have sent an email to your registered email address with instructions to reset your password.</p>
        <p class="text-muted">If you don’t receive an email within a few minutes, please check your spam folder or try again.</p>

        <!-- Button to Resend Email or Go Back -->
        <a asp-action="ResendEmail" class="btn btn-primary w-100">Resend Email</a>
        <a asp-action="Login" class="btn btn-secondary w-100 mt-2">Back to Login</a>
    </div>
</div>
