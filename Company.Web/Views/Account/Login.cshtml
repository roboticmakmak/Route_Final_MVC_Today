@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Full-page background image styling -->
<style>
    body {
        background: url('/images/background.jpg') no-repeat center center fixed; /* Replace with the path to your background image */
        background-size: cover;
    }

    .login-card {
        background-color: rgba(255, 255, 255, 0.85); /* Semi-transparent white */
        border-radius: 10px;
    }

    .form-control, .btn-primary {
        border-radius: 5px;
    }

    .text-white a {
        color: #007bff; /* Bootstrap's primary color */
    }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card login-card p-4 shadow-lg" style="width: 100%; max-width: 400px;">
        <h2 class="card-title text-center mb-4 text-dark">Login</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Email" class="form-label text-dark">Email</label>
                <input type="email" asp-for="Email" placeholder="Enter your email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Password" class="form-label text-dark">Password</label>
                <input type="password" asp-for="Password" placeholder="Enter your password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMe">
                <label class="form-check-label text-dark" for="rememberMe">Keep Me Signed In</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <hr class="my-4">

        <p class="text-center text-dark">
            Don't have an account?
            <a asp-action="SignUp" class="text-decoration-none">Sign Up Now!</a>
        </p>
        <p class="text-center text-dark">
            <a asp-action="ForgetPassword" class="text-decoration-none">Forgot Password?</a>
        </p>
    </div>
</div>
